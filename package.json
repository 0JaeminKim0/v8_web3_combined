{
  "name": "webapp",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "start": "node server-simple.js",
    "start:railway": "node server-simple.js",
    "build": "vite build",
    "build:railway": "npm run build && node server.js",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name webapp",
    "deploy:railway": "railway up",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "contract:compile": "hardhat compile",
    "contract:deploy": "hardhat run scripts/deploy.js --network sepolia",
    "contract:verify": "hardhat verify --network sepolia",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "hono": "^4.9.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250829.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.2",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.0",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
